{% extends 'layouts/base.html.twig' %}

{% block title 'Account' %}
{% block body %}
<div class="row mt-5 mb-5">
    <div class="col-md-6 text-center mx-auto">
        <h1 class="h3 mt-5 my-3 text-center">Profile</h1>
        <img class="rounded-circle img-fluid mb-3" height="80" width="120" src="{{ asset('img/profile.png')}}">
        <h5 class="text-muted">{{ user.fullName }}</h5>
        <h6>{{ app.user.email }}</h6>
        <p class="text-muted">
            Account created ‚è≤<span class="badge badge-pill">{{ user.createdAt|ago}}</span><br>
            Verified account {{ user.getVerifiedInformations }}
        </p>
        <a href="{{ path('app_user_account_edit') }}" class="">Edit</a> |
        <a href="{{ path('app_user_account_change_password') }}">Change password</a>
    </div>
</div>


{% endblock %}
{% block javascripts %}
{% endblock %}