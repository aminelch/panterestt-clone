{% extends 'layouts/base.html.twig' %}

{% block title %}Edit pin #{{ pin.id }} - {{ pin.title }} {% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h2>Edit pin</h2>
        {{ include('pins/_form.html.twig', {btnText: 'Edit'}) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    window.onload = () => {
        const vichContainer = document.querySelector('.vich-image')
        let vichPicture = vichContainer.querySelector('img:first-child')
        vichPicture.style.height = "50%";
        vichPicture.style.width = "50%";
    }
</script>
{% endblock %}